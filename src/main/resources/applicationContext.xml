<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />
    
    <context:component-scan base-package="com.svhelloworld.knotlog" />
    
    <bean id="eventBusExceptionHandler" class="com.svhelloworld.knotlog.exceptions.ExceptionHandler" />
    
    <bean id="eventBus" class="com.google.common.eventbus.EventBus">
        <constructor-arg ref="eventBusExceptionHandler" />
    </bean>
    
    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="com.svhelloworld.knotlog.convert.StringToDistanceUnitConverter" />
                <bean class="com.svhelloworld.knotlog.ui.currentstate.VesselMessageViewConverter" />
            </list>
        </property>
    </bean>
    
</beans>